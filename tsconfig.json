{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",
    "compilerOptions": {
      "lib": ["es2016"],
      "module": "commonjs",
      "target": "es2016",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "outDir": "./dist"
    },
    "exclude": [
      "node_modules", 
      "**/*.spec.ts", 
      "dist/**"
    ]
  }